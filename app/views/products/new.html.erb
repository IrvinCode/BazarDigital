<h2>Añadir producto</h2>

<%= form_with(model: @product, url: products_path, local: true) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  
  <%= f.submit "Añadir" %>
<% end %>